<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/layout_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Std_Room.Fragment.HomeTuitionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_tuition_lyt">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200dp"
            android:layout_margin="@dimen/dim_16dp"
            app:cardCornerRadius="@dimen/dim_8dp"
            app:cardElevation="@dimen/dim_5dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="@dimen/dim_15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="@dimen/dim_3dp"
                app:sliderIndicatorRadius="@dimen/dim_2dp"
                app:sliderIndicatorSelectedColor="@color/color_primary"
                app:sliderIndicatorUnselectedColor="@color/loading_color"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/dim_16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/parent"
                android:layout_width="@dimen/dim_130dp"
                android:layout_height="@dimen/dim_130dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardElevation="@dimen/dim_15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_65dp"
                        android:layout_height="@dimen/dim_65dp"
                        android:src="@drawable/teacher_img"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_8dp"
                        android:text="Teachers List"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/dim_12sp"></TextView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_6dp"
                    android:layout_marginTop="@dimen/dim_124dp"
                    android:background="@color/color_primary" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/teacher"
                android:layout_width="@dimen/dim_130dp"
                android:layout_height="@dimen/dim_130dp"
                android:layout_marginLeft="@dimen/dim_20dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardElevation="@dimen/dim_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_65dp"
                        android:layout_height="@dimen/dim_65dp"
                        android:src="@drawable/login_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_8dp"
                        android:text="Teacher Login"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/dim_12sp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_6dp"
                    android:layout_marginTop="@dimen/dim_124dp"
                    android:background="@color/color_primary" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>